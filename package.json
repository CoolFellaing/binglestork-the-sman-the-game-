{
  "name": "haxe-flixel-template",
  "version": "0.1.2",
  "description": "HaxeFlixel game template powered by Lix and Nodejs. The fastest way to start building a HaxeFlixel game.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "lix lime build html5 -minify",
    "first-build": "lix lime build html5",
    "concurrently": "concurrently --hide \"1,2\" \"npm run watch\" \"npm run server\" \"npm run comp-server\"",
    "start-old": "npm run first-build && npm run concurrently",
    "start": "node bin/startup.js",
    "watch": "watchman-make -p 'src/**/*.hx' -r 'sh watcher.sh'",
    "server": "http-server export/html5/bin --port 1212 -c0",
    "comp-server": "haxe -v --wait 8000"
  },
  "bin": {
    "hft-startup": "bin/startup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RichardBray/haxe-flixel-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RichardBray/haxe-flixel-template/issues"
  },
  "homepage": "https://github.com/RichardBray/haxe-flixel-template#readme",
  "dependencies": {
    "concurrently": "^6.4.0",
    "http-server": "^14.0.0",
    "log-update": "^5.0.0"
  },
  "engines": {
    "node": ">=12"
  }
}
